<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountsHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/income_lyt">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Add Income"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/income_name"
                    android:inputType="number"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Your Name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/income_amount"
                    android:inputType="number"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Amount"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_border"
                    android:id="@+id/income_category"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/income_desc"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Description"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:onClick="onClickIncome"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_clr_drawble"
                    android:text="Add Income"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/expense_lyt">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Add Expense"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/expense_name"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Your Name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/expense_amount"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Amount"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_border"
                    android:id="@+id/expense_category"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/expense_desc"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_border"
                    android:hint="Enter Description"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:onClick="onCLickExpense"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_clr_drawble"
                    android:text="Add Expense"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>






</LinearLayout>