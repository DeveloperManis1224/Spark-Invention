<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="7dp"
    android:background="@drawable/student_card_bg"
    android:elevation="2dp"
    android:padding="5sp"
    android:id="@+id/lyt_student_alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_txt_student_name"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="student Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/lyt_txt_studentt_phone"
            android:text="Phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/colorPrimary"
            android:id="@+id/lyt_txt_student_email"
            android:textSize="10sp"
            android:text="Mail"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_txt_date"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/colorPrimary"
            android:text="date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:gravity="right">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:id="@+id/lyt_img_phone"
                android:contentDescription="@null"
                android:layout_marginBottom="2dp"
                android:background="@drawable/icon_phone"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>